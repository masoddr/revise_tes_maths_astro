---
import '../styles/global.css';
import ScrollToTop from '../components/ScrollToTop.astro';
import ReadingProgress from '../components/ReadingProgress.astro';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Cours de maths et sciences pour collège et lycée. Accompagnement personnalisé et rigoureux."
} = Astro.props;

const ADS_ID = import.meta.env.PUBLIC_GOOGLE_ADS_ID;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="author" content="Massyl - Révise Tes Maths" />
    <meta name="language" content="French" />
    <meta name="revisit-after" content="7 days" />
    
    <!-- Icons -->
    <link rel="icon" type="image/png" href="/images/logo_revise_tes_maths.png" />
    <link rel="apple-touch-icon" href="/images/logo_revise_tes_maths.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/logo_revise_tes_maths.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/logo_revise_tes_maths.png" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://revise-tes-maths.fr" />
    <meta property="og:image" content="https://revise-tes-maths.fr/images/logo_revise_tes_maths.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="Révise Tes Maths" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://revise-tes-maths.fr/images/logo_revise_tes_maths.png" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={`https://revise-tes-maths.fr${Astro.url.pathname}`} />
    
    <!-- Alternate languages (if needed in future) -->
    <link rel="alternate" hreflang="fr" href={`https://revise-tes-maths.fr${Astro.url.pathname}`} />
    
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "EducationalOrganization",
      "name": "Révise Tes Maths",
      "description": description,
      "url": "https://revise-tes-maths.fr",
      "logo": "https://revise-tes-maths.fr/images/logo_revise_tes_maths.png",
      "founder": {
        "@type": "Person",
        "name": "Massyl",
        "jobTitle": "Professeur de mathématiques",
        "description": "Ingénieur Systèmes Spatiaux spécialisé en mathématiques appliquées"
      },
      "areaServed": "FR",
      "educationalCredentialAwarded": "Baccalauréat",
      "audience": {
        "@type": "EducationalAudience",
        "educationalRole": "student"
      },
      "offers": {
        "@type": "Offer",
        "category": "Educational Service",
        "areaServed": "FR"
      }
    }, null, 2)} />
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/images/logo_revise_tes_maths.png" as="image" />

    {ADS_ID && (
      <>
        <!-- Google tag (gtag.js) -->
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${ADS_ID}`}></script>
        <script is:inline define:vars={{ ADS_ID }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', ADS_ID);
        </script>
      </>
    )}
    
    <title>{title}</title>
  </head>
  <body class="font-sans antialiased bg-white">
    <ReadingProgress />
    <main>
      <slot />
    </main>
    <ScrollToTop />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  body {
    margin: 0;
    padding: 0;
  }
</style>

