---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Cours et exercices de mathématiques - 3ème | revise-tes-maths.fr"
  description="Cours et exercices de mathématiques pour la classe de 3ème. Révisions, annales et préparation au brevet."
>
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-white py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Mathématiques - 3ème
        </h1>
        <p class="text-lg text-gray-700">
          Cours et exercices pour la classe de 3ème
        </p>
      </div>
    </div>
  </section>
  
  <!-- Cours Section -->
  <section class="bg-white py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
          Cours
        </h2>
        <p class="text-gray-600 mb-8">
          Cours structurés par chapitre pour la classe de 3ème, couvrant l'ensemble du programme officiel.
        </p>
        <a 
          href="/3eme/cours"
          class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200"
        >
          Voir tous les cours
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <!-- Exercices Section -->
  <section class="bg-white py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
          Exercices
        </h2>
        <p class="text-gray-600 mb-8">
          Exercices ciblés par chapitre pour la classe de 3ème, avec corrigés détaillés.
        </p>
        <a 
          href="/3eme/exercices"
          class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200"
        >
          Voir tous les exercices
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>

