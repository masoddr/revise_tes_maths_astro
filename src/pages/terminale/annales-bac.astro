    const yearButtons = document.querySelectorAll('.filter-year-btn');
    const themeButtons = document.querySelectorAll('.filter-theme-btn');
    const annaleCards = document.querySelectorAll('.annale-card');
    const resultsCount = document.getElementById('results-count');
    const emptyState = document.getElementById('empty-state');
    const contentGrid = document.getElementById('content-grid');
    const searchInput = document.getElementById('search-input');

    // Update button styles
    function updateButtonStyles() {
      yearButtons.forEach(btn => {
        const filterValue = btn.getAttribute('data-filter-year');
        if (filterValue === currentYearFilter) {
          btn.className = 'filter-year-btn px-5 py-2.5 rounded-lg text-sm font-medium transition-all duration-200 bg-gray-900 text-white shadow-sm hover:bg-gray-800';
        } else {
          btn.className = 'filter-year-btn px-5 py-2.5 rounded-lg text-sm font-medium transition-all duration-200 bg-white text-gray-700 border border-gray-200 hover:bg-gray-50 hover:border-gray-300';
        }
      });

      themeButtons.forEach(btn => {
        const filterValue = btn.getAttribute('data-filter-theme');
        if (filterValue === currentThemeFilter) {
          btn.className = 'filter-theme-btn px-5 py-2.5 rounded-lg text-sm font-medium transition-all duration-200 bg-gray-900 text-white shadow-sm hover:bg-gray-800';
        } else {
