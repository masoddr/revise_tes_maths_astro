---

<Layout 
  title="Exercices de mathématiques - Terminale | revise-tes-maths.fr"
  description="Exercices de mathématiques ciblés pour la classe de Terminale. Pratique et révisions par chapitre."
>
  <Header />
  
  <!-- Breadcrumbs -->
  <Breadcrumbs 
    items={[
      { label: 'Accueil', href: '/' },
      { label: 'Terminale', href: '/terminale' },
      { label: 'Exercices', href: '/terminale/exercices' }
    ]}
  />
  
  <!-- Hero Section -->
  <section class="bg-white py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Exercices de Mathématiques - Terminale
        </h1>
        <p class="text-lg text-gray-700">
          Exercices ciblés pour la classe de Terminale
        </p>
      </div>
    </div>
  </section>
  
  <!-- Content Section -->
  <section class="bg-white py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {exercices.map((exerciceItem) => (
            <a 
              href={exerciceItem.fichier}
              target="_blank"
              rel="noopener noreferrer"
              class="block p-6 bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 hover:border-blue-500"
            >
              <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">
                    {exerciceItem.titre}
                  </h3>
                  <p class="text-sm text-gray-500">
                    PDF
                  </p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>
