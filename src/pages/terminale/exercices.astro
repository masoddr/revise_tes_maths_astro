  titre: string;
  fichier: string;
}

// Liste des exercices
const exercices: ExerciceItem[] = [
  {
    titre: 'Calcul intégral',
    fichier: '/pdf/terminale/exercices/Calcul_intégral.pdf'
  },
  {
    titre: 'Complément sur la dérivation',
    fichier: '/pdf/terminale/exercices/Complément_sur_la_dérivation.pdf'
  },
  {
    titre: 'Continuité d\'une fonction',
    fichier: '/pdf/terminale/exercices/Continuité d\'une fonction.pdf'
  },
  {
    titre: 'Convexité et dérivation',
    fichier: '/pdf/terminale/exercices/Convexité_et_dérivation.pdf'
  },
  {
    titre: 'Dénombrement - Combinatoire',
    fichier: '/pdf/terminale/exercices/Dénombrement-Combinatoire.pdf'
  },
  {
    titre: 'Fonction logarithme népérien',
    fichier: '/pdf/terminale/exercices/Fonction_logarithme_népérien.pdf'
  },
  {
    titre: 'Fonction trigonométrique',
    fichier: '/pdf/terminale/exercices/Fonction_trigonométrique.pdf'
  },
  {
    titre: 'Géométrie vectorielle dans l\'espace',
    fichier: '/pdf/terminale/exercices/Géométrie_vectorielle_dans_l\'espace.pdf'
  },
  {
    titre: 'Limite de fonctions',
    fichier: '/pdf/terminale/exercices/Limite de fonctions.pdf'
  },
  {
    titre: 'Limite de suites 2',
    fichier: '/pdf/terminale/exercices/Limite_de_suites_2.pdf'
  },
  {
    titre: 'Loi binomiale',
    fichier: '/pdf/terminale/exercices/Loi_binomiale.pdf'
  },
  {
    titre: 'Loi des grands nombres',
    fichier: '/pdf/terminale/exercices/Loi_des_grands_nombres.pdf'
  },
  {
    titre: 'Orthogonalité et distance en 3D',
    fichier: '/pdf/terminale/exercices/Orthogonalité_et_distance_en_3D.pdf'
