---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import UniversitiesBanner from '../components/UniversitiesBanner.astro';
import AnnalesBanner from '../components/AnnalesBanner.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import ScrollAnimations from '../components/ScrollAnimations.astro';
---

<Layout 
  title="Cours de maths collège & lycée | revise-tes-maths.fr"
  description="Professeur particulier de maths et sciences pour collège et lycée. Accompagnement personnalisé et rigoureux."
>
  <Header />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-b from-blue-50 via-blue-50/50 to-white pt-6 pb-8 md:pt-8 md:pb-12 lg:pt-10 lg:pb-16 overflow-hidden animate-on-scroll">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 right-10 w-72 h-72 bg-cyan-200/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-20 w-96 h-96 bg-purple-200/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-10 w-64 h-64 bg-yellow-200/20 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center">
          
          <!-- Left Column: Text Content -->
          <div class="text-center lg:text-left">
      
            <!-- Main Title -->
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-3 md:mb-4 leading-tight">
              Accompagnement exigeant en <span class="text-blue-600">mathématiques</span> et <span class="text-blue-600">sciences</span>
            </h1>
            
            <!-- Subtitle -->
            <p class="text-lg md:text-xl text-gray-600 mb-4 md:mb-5 leading-relaxed max-w-2xl mx-auto lg:mx-0">
              Collège – Lycée – Préparation aux parcours internationaux
            </p>
            
            <!-- Micro-intertitre -->
            <h2 class="text-xl md:text-2xl font-semibold text-gray-800 mb-3 md:mb-4 max-w-2xl mx-auto lg:mx-0">
              Une trajectoire académique construite dans la durée.
            </h2>
            

            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-6">
              <a 
                href="#contact" 
                class="group relative inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white bg-gray-900 rounded-xl hover:bg-gray-800 transition-all duration-300"
              >
                <span>Demander un premier échange</span>
                <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
              
              <a 
                href="/a-propos" 
                class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-gray-900 bg-white border-2 border-gray-900 rounded-xl hover:bg-gray-900 hover:text-white transition-all duration-300"
              >
                Qui suis-je ?
              </a>
            </div>
            
            <!-- Phrase rassurante pour les parents -->
            <p class="text-base md:text-lg text-gray-600 mb-6 text-center lg:text-left max-w-2xl mx-auto lg:mx-0 font-medium">
              Suivi individuel — travail sur le long terme — élèves sélectionnés
            </p>
            
            <!-- Stats or Features -->
            <div class="flex flex-wrap gap-6 justify-center lg:justify-start text-sm text-gray-600">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Cours en visio disponibles</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>+10 ans d'expérience</span>
              </div>
            </div>
          </div>
          
          <!-- Right Column: Photo and Floating Cards -->
          <div class="relative min-h-[400px] md:min-h-[500px] lg:min-h-[600px]">
            <!-- Photo Container - Shifted left to make room for cards -->
            <div class="relative flex items-center justify-center md:justify-start lg:justify-start mb-4 md:mb-6 pt-4 md:pt-6">
              <div class="w-44 h-44 md:w-52 md:h-52 lg:w-60 lg:h-60 rounded-full overflow-hidden border-4 border-white shadow-2xl z-10 mx-auto md:mx-0">
                <img 
                  src="/massyl.jpg" 
                  alt="Massyl - Professeur de mathématiques et sciences, ingénieur systèmes spatiaux" 
                  class="w-full h-full object-cover"
                  loading="eager"
                  decoding="async"
                />
              </div>
            </div>
            
            <!-- Floating Card: Annales (top right, well above star) -->
            <a href="/annales" class="absolute top-0 right-0 md:top-2 md:right-2 lg:top-4 lg:right-0 bg-white rounded-2xl shadow-xl p-5 md:p-6 lg:p-6 border border-gray-100 animate-float max-w-[240px] md:max-w-[280px] lg:max-w-[300px] hover:shadow-2xl hover:scale-105 transition-all duration-300 cursor-pointer block z-20">
              <div class="flex items-start gap-3 md:gap-4">
                <div class="flex-shrink-0 w-12 h-12 md:w-14 md:h-14 bg-yellow-400 rounded-full flex items-center justify-center shadow-md">
                  <svg class="w-7 h-7 md:w-8 md:h-8 text-white fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="font-bold text-gray-900 text-base md:text-lg mb-1.5">Annales disponibles</h3>
                  <p class="text-sm md:text-base text-gray-600 mb-2.5">Brevet & Bac avec corrigés</p>
                  <div class="text-sm md:text-base text-blue-600 font-medium inline-flex items-center gap-1">
                    Voir les annales <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                  </div>
                </div>
              </div>
            </a>
            
            <!-- Bandeau Universités (bottom right, well below star) -->
            <div class="absolute bottom-0 right-0 md:bottom-2 md:right-2 lg:bottom-4 lg:right-4 bg-gray-900 text-white rounded-2xl shadow-xl p-4 md:p-5 lg:p-6 border border-gray-800 max-w-[320px] md:max-w-[360px] lg:max-w-[400px] z-20">
              <h3 class="text-base md:text-lg lg:text-xl font-bold mb-2.5 md:mb-3 text-white">
                Résultats et parcours
              </h3>
              
              <p class="text-sm md:text-base text-white/90 mb-4 md:mb-5 leading-relaxed">
                Plus de 10 ans d'accompagnement d'élèves vers l'excellence. Mes élèves ont intégré des institutions prestigieuses telles que :
              </p>
              
              <!-- Logos des universités -->
              <div class="flex flex-row items-center justify-start gap-5 md:gap-6 lg:gap-8">
                <div class="h-10 md:h-12 lg:h-14 flex items-center justify-center">
                  <img 
                    src="/logos/bocconi.png" 
                    alt="Bocconi University" 
                    class="h-full opacity-90 hover:opacity-100 transition-opacity duration-300 object-contain"
                    loading="lazy"
                    decoding="async"
                  />
                </div>
                
                <div class="h-10 md:h-12 lg:h-14 flex items-center justify-center">
                  <img 
                    src="/logos/kings_college.png" 
                    alt="King's College London" 
                    class="h-full opacity-90 hover:opacity-100 transition-opacity duration-300 object-contain"
                    loading="lazy"
                    decoding="async"
                  />
                </div>
                
                <div class="h-10 md:h-12 lg:h-14 flex items-center justify-center">
                  <img 
                    src="/logos/mcgill.png" 
                    alt="McGill University" 
                    class="h-full opacity-90 hover:opacity-100 transition-opacity duration-300 object-contain"
                    loading="lazy"
                    decoding="async"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Comment ça marche -->
  <!-- <HowItWorks /> -->
  
  <!-- Témoignages -->
  <Testimonials />
  
  <!-- FAQ -->
  <FAQ />
  
  <!-- Contact -->
  <section id="contact" class="bg-gray-50 py-8 md:py-10">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 items-start">
          <!-- Colonne gauche : Texte -->
          <div>
            <h2 class="text-xl md:text-2xl font-bold text-gray-900 mb-3">
              Commencez votre réussite maintenant
            </h2>
            
            <p class="text-gray-700 mb-4 leading-relaxed text-sm md:text-base">
              Contactez-moi pour évaluer ensemble vos besoins et définir un programme personnalisé.
            </p>
            
            <ul class="space-y-2 mb-4">
              <li class="flex items-start">
                <svg class="w-4 h-4 text-gray-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700 text-sm md:text-base">Réponse garantie sous 24h</span>
              </li>
              <li class="flex items-start">
                <svg class="w-4 h-4 text-gray-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700 text-sm md:text-base">Programme personnalisé adapté à vos objectifs</span>
              </li>
              <li class="flex items-start">
                <svg class="w-4 h-4 text-gray-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700 text-sm md:text-base">Horaires flexibles 7j/7</span>
              </li>
            </ul>
            
            <div class="space-y-3">
              <div class="flex items-start">
                <svg class="w-4 h-4 text-gray-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <p class="text-gray-700 text-sm md:text-base">
                  Vous pouvez aussi m'écrire directement à <a href="mailto:contact@revise-tes-maths.fr" class="text-gray-900 hover:text-gray-700 underline font-medium">contact@revise-tes-maths.fr</a>
                </p>
              </div>
              <div class="flex items-start">
                <svg class="w-4 h-4 text-[#25D366] mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                <p class="text-gray-700 text-sm md:text-base">
                  Ou me contacter sur <a href="https://wa.me/33616635187?text=Bonjour%2C%20je%20souhaite%20en%20savoir%20plus%20sur%20votre%20accompagnement%20en%20math%C3%A9matiques." target="_blank" rel="noopener noreferrer" class="text-[#25D366] hover:text-[#20BA5A] underline font-semibold">WhatsApp</a>
                </p>
              </div>
            </div>
          </div>
          
          <!-- Colonne droite : Formulaire -->
          <div>
            <ContactForm />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
  
  <!-- Scroll animations -->
  <ScrollAnimations />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  /* Floating animation for cards */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  @keyframes float-delayed {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .animate-float-delayed {
    animation: float-delayed 3.5s ease-in-out infinite;
    animation-delay: 0.5s;
  }
  
  /* Responsive adjustments for floating cards */
  @media (max-width: 768px) {
    /* Container avec moins de hauteur minimale sur mobile */
    .min-h-\[500px\] {
      min-height: auto !important;
    }
    
    /* Carte annales en position relative sur mobile */
    .animate-float {
      position: relative !important;
      transform: none !important;
      animation: none;
      top: auto !important;
      right: auto !important;
      margin-top: 1rem;
      margin-bottom: 1rem;
      max-width: 100% !important;
    }
    
    /* Bandeau universités en position relative sur mobile */
    .absolute.bottom-0.right-0 {
      position: relative !important;
      bottom: auto !important;
      right: auto !important;
      margin-top: 1.5rem;
      max-width: 100% !important;
    }
    
    /* Réduire l'espacement de l'étoile sur mobile */
    .mb-8.md\:mb-12 {
      margin-bottom: 1rem !important;
    }
  }
  
  /* Sur tablette, ajuster les positions pour éviter les chevauchements */
  @media (min-width: 769px) and (max-width: 1024px) {
    .min-h-\[500px\] {
      min-height: 550px !important;
    }
  }
  
  /* Ensure star container is centered on mobile */
  @media (max-width: 1024px) {
    .relative.flex.items-center.justify-center {
      margin: 2rem auto;
    }
  }
</style>
