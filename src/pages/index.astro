---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import StickyCTA from '../components/StickyCTA.astro';
import UniversitiesBanner from '../components/UniversitiesBanner.astro';
---

<Layout 
  title="Accompagnement académique en mathématiques et sciences | revise-tes-maths.fr"
  description="Accompagnement académique exigeant en mathématiques et sciences pour collège et lycée. Suivi individuel, rigueur méthodologique."
  whatsappPhone="33616635187"
>
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-white py-8 md:py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="flex flex-col md:flex-row items-center gap-4 md:gap-12">
          <!-- Photo -->
          <div class="flex-shrink-0">
            <img 
              src="/massyl.jpg" 
              alt="Massyl" 
              class="w-28 h-28 md:w-64 md:h-64 rounded-full object-cover shadow-lg"
              loading="eager"
              decoding="async"
            />
          </div>
          
          <!-- Contenu texte -->
          <div class="flex-1 text-center md:text-left">
            <h1 class="text-2xl md:text-4xl font-bold text-gray-900 mb-3 md:mb-4">
              Accompagnement en mathématiques et physique-chimie
            </h1>
            
            <p class="text-base md:text-xl text-gray-700 mb-4 md:mb-6">
              Collège & lycée – Suivi individuel
            </p>
            
            <p class="text-sm md:text-base text-gray-600 mb-4 md:mb-6 leading-relaxed">
              Réussissez vos études avec un soutien sur-mesure
            </p>
            
            <div class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-center md:justify-start">
              <a 
                href="#contact" 
                class="inline-block bg-gray-900 text-white px-6 py-2.5 md:px-8 md:py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors text-center text-sm md:text-base"
              >
                Demander un entretien
              </a>
              
              <a 
                href="/a-propos" 
                class="inline-block border-2 border-gray-900 text-gray-900 px-6 py-2.5 md:px-8 md:py-3 rounded-lg font-semibold hover:bg-gray-900 hover:text-white transition-colors text-center text-sm md:text-base"
              >
                Qui suis-je ?
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Bandeau Universités -->
  <UniversitiesBanner />
  
  <!-- Approche simplifiée -->
  <section id="approche" class="bg-gray-50 py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 text-center">
          Une approche rigoureuse et structurée
        </h2>
        
        <p class="text-gray-700 mb-6 leading-relaxed">
          Accompagnement intellectuel exigeant, construit dans le temps pour :
        </p>
        
        <ul class="space-y-3 mb-8">
          <li class="flex items-start">
            <span class="text-gray-600 mr-3 mt-1">•</span>
            <span class="text-gray-700">Consolider les bases théoriques</span>
          </li>
          <li class="flex items-start">
            <span class="text-gray-600 mr-3 mt-1">•</span>
            <span class="text-gray-700">Développer une méthode de travail autonome</span>
          </li>
          <li class="flex items-start">
            <span class="text-gray-600 mr-3 mt-1">•</span>
            <span class="text-gray-700">Préparer les examens et spécialités</span>
          </li>
        </ul>
        
        <p class="text-gray-600 italic text-center">
          Suivi individuel adapté à chaque élève
        </p>
      </div>
    </div>
  </section>
  
  <!-- Disciplines -->
  <section id="disciplines" class="bg-white py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 text-center">
          Disciplines enseignées
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
          <div>
            <p class="text-lg font-semibold text-gray-900 mb-2">Mathématiques</p>
          </div>
          <div>
            <p class="text-lg font-semibold text-gray-900 mb-2">Physique – Chimie</p>
          </div>
          <div>
            <p class="text-lg font-semibold text-gray-900 mb-2">Python</p>
            <p class="text-sm text-gray-600">Algorithmique & logique</p>
          </div>
        </div>
        
        <p class="text-gray-600 text-center mt-6">
          Du collège à la terminale
        </p>
      </div>
    </div>
  </section>
  
  <!-- Contact -->
  <section id="contact" class="bg-gray-50 py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4 text-center">
          Premier contact
        </h2>
        
        <p class="text-gray-700 mb-8 text-center leading-relaxed">
          Un premier entretien permet de comprendre le parcours de l'élève et de vérifier l'adéquation avec ma méthode de travail.
        </p>
        
        <ContactForm />
      </div>
    </div>
  </section>
  
  <Footer />
  <StickyCTA />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  @media (max-width: 768px) {
    body {
      padding-bottom: 80px;
    }
  }
</style>
