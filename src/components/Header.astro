---
// Header simplifié
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-2 md:py-3">
    <div class="flex items-center justify-between max-w-[1040px] mx-auto">
      <a href="/" class="logo-link flex items-center space-x-2 text-xl font-bold">
        <img src="/images/logo_revise_tes_maths.png" alt="Logo Révise Tes Maths" class="logo-image h-8 w-8 object-contain" />
        <span class="logo-text">Révise Tes Maths</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-6">
        <a href="/a-propos" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          Qui suis-je ?
        </a>
        <a href="/3eme" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          3ème
        </a>
        <a href="/seconde" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          Seconde
        </a>
        <a href="/premiere" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          Première
        </a>
        <a href="/terminale" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          Terminale
        </a>
        <a 
          href="/#contact" 
          class="bg-gray-900 text-white px-5 py-2 rounded-lg font-medium hover:bg-gray-800 transition-colors text-sm"
        >
          Contact
        </a>
      </div>
      
      <button 
        id="mobile-menu-button"
        class="md:hidden text-gray-700 hover:text-gray-900"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200">
      <div class="space-y-3 pt-4">
        <a href="/a-propos" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          Qui suis-je ?
        </a>
        <a href="/3eme" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          3ème
        </a>
        <a href="/seconde" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          Seconde
        </a>
        <a href="/premiere" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          Première
        </a>
        <a href="/terminale" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          Terminale
        </a>
        <a 
          href="/#contact" 
          class="block bg-gray-900 text-white px-6 py-2 rounded-lg font-medium text-center text-sm"
        >
          Contact
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>

<style>
  /* Logo animation styles */
  .logo-link {
    transition: all 0.3s ease;
  }

  .logo-link:hover {
    transform: scale(1.05);
  }

  .logo-text {
    background: linear-gradient(to right, #4f46e5, #9333ea);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: background 0.3s ease;
  }

  .logo-link:hover .logo-text {
    background: linear-gradient(to right, #9333ea, #4f46e5);
    -webkit-background-clip: text;
    background-clip: text;
  }

  .logo-image {
    animation: bounce-soft 2s ease-in-out infinite;
  }

  @keyframes bounce-soft {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }
</style>
