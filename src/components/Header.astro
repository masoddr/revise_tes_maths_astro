---
// Header simplifié
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-2 md:py-3">
    <div class="flex items-center justify-between max-w-[1040px] mx-auto">
      <a href="/" class="logo-link flex items-center space-x-2 text-xl font-bold">
        <img src="/images/logo_revise_tes_maths.png" alt="Logo Révise Tes Maths" class="logo-image h-8 w-8 object-contain" />
        <span class="logo-text">Révise Tes Maths</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-6">
        <a href="/a-propos" class="nav-link text-sm">
          Qui suis-je ?
        </a>
        <a href="/3eme" class="nav-link text-sm">
          3ème
        </a>
        <a href="/seconde" class="nav-link text-sm">
          Seconde
        </a>
        <a href="/premiere" class="nav-link text-sm">
          Première
        </a>
        <a href="/terminale" class="nav-link text-sm">
          Terminale
        </a>
      </div>
      
      <button 
        id="mobile-menu-button"
        class="md:hidden text-gray-700 hover:text-gray-900"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200">
      <div class="space-y-3 pt-4">
        <a href="/a-propos" class="nav-link-mobile block text-sm py-2">
          Qui suis-je ?
        </a>
        <a href="/3eme" class="nav-link-mobile block text-sm py-2">
          3ème
        </a>
        <a href="/seconde" class="nav-link-mobile block text-sm py-2">
          Seconde
        </a>
        <a href="/premiere" class="nav-link-mobile block text-sm py-2">
          Première
        </a>
        <a href="/terminale" class="nav-link-mobile block text-sm py-2">
          Terminale
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>

<style>
  /* Logo animation styles */
  .logo-link {
    transition: all 0.3s ease;
  }

  .logo-link:hover {
    transform: scale(1.05);
  }

  .logo-text {
    color: #111827; /* gray-900 */
    transition: color 0.3s ease;
  }

  .logo-link:hover .logo-text {
    color: #1f2937; /* gray-800 */
  }

  .logo-image {
    animation: bounce-soft 2s ease-in-out infinite;
  }

  @keyframes bounce-soft {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  /* Navigation links with animated underline */
  .nav-link {
    position: relative;
    color: #374151; /* gray-700 */
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #111827; /* gray-900 */
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: #111827; /* gray-900 */
    transform: translateY(-2px);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Mobile navigation links */
  .nav-link-mobile {
    position: relative;
    color: #374151; /* gray-700 */
    transition: all 0.3s ease;
    padding-left: 0.5rem;
    border-left: 2px solid transparent;
  }

  .nav-link-mobile:hover {
    color: #111827; /* gray-900 */
    border-left-color: #111827;
    transform: translateX(4px);
  }
</style>
