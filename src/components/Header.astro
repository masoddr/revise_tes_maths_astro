</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Desktop dropdowns
  const dropdowns = [
    { button: 'dropdown-college-button', menu: 'dropdown-college' },
    { button: 'dropdown-lycee-button', menu: 'dropdown-lycee' }
  ];

  dropdowns.forEach(({ button, menu }) => {
    const buttonEl = document.getElementById(button);
    const menuEl = document.getElementById(menu);
    
    if (buttonEl && menuEl) {
      buttonEl.addEventListener('click', (e) => {
        e.stopPropagation();
        // Close other dropdowns
        dropdowns.forEach(({ menu: otherMenu }) => {
          if (otherMenu !== menu) {
            document.getElementById(otherMenu)?.classList.add('hidden');
          }
        });
        menuEl.classList.toggle('hidden');
      });
    }
  });

  // Close dropdowns when clicking outside or on a link
  document.addEventListener('click', (e) => {
    // Don't close if clicking inside a dropdown
    if (e.target.closest('.dropdown-group')) {
      return;
    }
    dropdowns.forEach(({ menu }) => {
      document.getElementById(menu)?.classList.add('hidden');
    });
  });

  // Close dropdowns when clicking on a link inside
  dropdowns.forEach(({ menu }) => {
    const menuEl = document.getElementById(menu);
    if (menuEl) {
      menuEl.addEventListener('click', (e) => {
        if (e.target.tagName === 'A') {
          menuEl.classList.add('hidden');
        }
      });
    }
  });

  // Mobile dropdowns
  const mobileDropdowns = [
    { button: 'mobile-dropdown-college-button', menu: 'mobile-dropdown-college' },
    { button: 'mobile-dropdown-lycee-button', menu: 'mobile-dropdown-lycee' }
  ];

  mobileDropdowns.forEach(({ button, menu }) => {
    const buttonEl = document.getElementById(button);
    const menuEl = document.getElementById(menu);
    
    if (buttonEl && menuEl) {
      buttonEl.addEventListener('click', (e) => {
        e.stopPropagation();
        const isHidden = menuEl.classList.contains('hidden');
        
        // Close other mobile dropdowns
        mobileDropdowns.forEach(({ menu: otherMenu, button: otherButtonId }) => {
          if (otherMenu !== menu) {
            document.getElementById(otherMenu)?.classList.add('hidden');
            const otherButton = document.getElementById(otherButtonId);
            if (otherButton) {
              const otherArrow = otherButton.querySelector('svg');
              if (otherArrow) {
                otherArrow.style.transform = 'rotate(0deg)';
              }
            }
          }
        });
        
        menuEl.classList.toggle('hidden');
        
        // Rotate arrow
        const arrow = buttonEl.querySelector('svg');
        if (arrow) {
          arrow.style.transform = isHidden ? 'rotate(180deg)' : 'rotate(0deg)';
        }
      });
    }
  });
</script>

<style>
  /* Logo animation styles */
  .logo-link {
    transition: all 0.3s ease;
  }

  .logo-link:hover {
    transform: scale(1.05);
  }

  .logo-text {
    color: #111827; /* gray-900 */
    transition: color 0.3s ease;
  }

  .logo-link:hover .logo-text {
    color: #1f2937; /* gray-800 */
  }

  .logo-image {
    animation: bounce-soft 2s ease-in-out infinite;
  }

  @keyframes bounce-soft {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  /* Navigation links with animated underline */
  .nav-link {
    position: relative;
    color: #374151; /* gray-700 */
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #111827; /* gray-900 */
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: #111827; /* gray-900 */
    transform: translateY(-2px);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Mobile navigation links */
  .nav-link-mobile {
    position: relative;
    color: #374151; /* gray-700 */
    transition: all 0.3s ease;
    padding-left: 0.5rem;
    border-left: 2px solid transparent;
  }

  .nav-link-mobile:hover {
    color: #111827; /* gray-900 */
    border-left-color: #111827;
    transform: translateX(4px);
  }
</style>
