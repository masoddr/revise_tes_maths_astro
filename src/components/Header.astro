            <a href="/3eme/exercices" class="block text-sm py-1 text-gray-600 pl-4">Exercices</a>
            <a href="/3eme/annales-brevet" class="block text-sm py-1 text-gray-600 pl-4">Annales du brevet</a>
          </div>
        </div>
        
        <!-- Lycée Mobile -->
        <div class="mobile-dropdown">
          <button class="nav-link-mobile block text-sm py-2 w-full text-left flex items-center justify-between" id="mobile-dropdown-lycee-button">
            <span>Lycée</span>
            <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="hidden pl-4 mt-2 space-y-2" id="mobile-dropdown-lycee">
            <div class="text-xs font-semibold text-gray-500 uppercase mb-1">Seconde</div>
            <a href="/seconde/cours" class="block text-sm py-1 text-gray-600 pl-4">Cours</a>
