<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Function to position panel and caret
  function positionPanelAndCaret(panel, triggerId, beforeShow = false) {
    const header = document.getElementById('main-header');
    const trigger = document.getElementById(triggerId);
    const caret = panel.querySelector('.mega-menu-caret');
    
    if (!header || !trigger || !caret) return;

    // If positioning before show, panel is already in DOM but hidden
    // Just ensure it's positioned correctly before making visible
    if (beforeShow) {
      // Keep transform for centering
      panel.style.left = '50%';
      panel.style.transform = 'translateX(-50%)';
    }

    // Force a reflow to ensure dimensions are calculated
    void panel.offsetHeight;

    // Calculate header bottom position
    const headerRect = header.getBoundingClientRect();
    const headerBottom = headerRect.bottom;
    
    // Position panel below header
    panel.style.top = `${headerBottom + 12}px`; // 12px = mt-3
    
    // Force another reflow after setting top
    void panel.offsetHeight;
    
    // Calculate trigger center position relative to panel
    const triggerRect = trigger.getBoundingClientRect();
    const panelRect = panel.getBoundingClientRect();
    
    // Calculate trigger center position relative to panel
    const triggerCenterX = triggerRect.left + triggerRect.width / 2;
    const panelLeft = panelRect.left;
    
    // Position caret to point at trigger center
    const caretLeft = triggerCenterX - panelLeft;
    caret.style.left = `${Math.max(24, Math.min(caretLeft, panelRect.width - 24))}px`;

    // If positioning before show, positioning is done
    // The hidden class will be removed after this function returns
    // which will make it visible with the correct position already set
  }

  // Mega Menu functionality
  const megaMenuGroups = document.querySelectorAll('.mega-menu-group');
  let hoverTimeout = null;
  let isHovering = false;

  megaMenuGroups.forEach((group) => {
    const trigger = group.querySelector('.mega-menu-trigger');
    const panel = group.querySelector('.mega-menu-panel');
    const chevron = group.querySelector('.mega-menu-chevron');
    const triggerId = panel?.getAttribute('data-trigger-id');
    
    if (!trigger || !panel || !triggerId) return;

    // Click handler
    trigger.addEventListener('click', (e) => {
      e.stopPropagation();
      const isOpen = !panel.classList.contains('hidden');
      
      // Close all other menus
      megaMenuGroups.forEach((otherGroup) => {
        if (otherGroup !== group) {
          const otherPanel = otherGroup.querySelector('.mega-menu-panel');
          const otherTrigger = otherGroup.querySelector('.mega-menu-trigger');
          const otherChevron = otherGroup.querySelector('.mega-menu-chevron');
          if (otherPanel) otherPanel.classList.add('hidden');
          if (otherTrigger) otherTrigger.classList.remove('mega-menu-active');
          if (otherChevron) otherChevron.classList.remove('rotate-180');
        }
      });
      
      // Toggle current menu
      if (isOpen) {
        panel.classList.add('hidden');
        trigger.classList.remove('mega-menu-active');
        if (chevron) chevron.classList.remove('rotate-180');
      } else {
        // Position panel and caret BEFORE showing it
        positionPanelAndCaret(panel, triggerId, true);
        // Remove hidden class after positioning
        panel.classList.remove('hidden');
        trigger.classList.add('mega-menu-active');
        if (chevron) chevron.classList.add('rotate-180');
      }
    });

    // Hover handlers
    group.addEventListener('mouseenter', () => {
      if (hoverTimeout) {
        clearTimeout(hoverTimeout);
        hoverTimeout = null;
      }
      isHovering = true;
      
      // Close other menus
      megaMenuGroups.forEach((otherGroup) => {
        if (otherGroup !== group) {
          const otherPanel = otherGroup.querySelector('.mega-menu-panel');
          const otherTrigger = otherGroup.querySelector('.mega-menu-trigger');
          const otherChevron = otherGroup.querySelector('.mega-menu-chevron');
          if (otherPanel) otherPanel.classList.add('hidden');
          if (otherTrigger) otherTrigger.classList.remove('mega-menu-active');
          if (otherChevron) otherChevron.classList.remove('rotate-180');
        }
      });
      
      // Position panel and caret BEFORE showing it
      positionPanelAndCaret(panel, triggerId, true);
      // Remove hidden class after positioning
      panel.classList.remove('hidden');
      trigger.classList.add('mega-menu-active');
      if (chevron) chevron.classList.add('rotate-180');
    });

    group.addEventListener('mouseleave', () => {
      isHovering = false;
      hoverTimeout = setTimeout(() => {
        if (!isHovering) {
          panel.classList.add('hidden');
          trigger.classList.remove('mega-menu-active');
          if (chevron) chevron.classList.remove('rotate-180');
        }
      }, 150);
    });
  });

  // Close menus when clicking outside
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.mega-menu-group')) {
      megaMenuGroups.forEach((group) => {
        const panel = group.querySelector('.mega-menu-panel');
        const trigger = group.querySelector('.mega-menu-trigger');
        const chevron = group.querySelector('.mega-menu-chevron');
        if (panel) panel.classList.add('hidden');
        if (trigger) trigger.classList.remove('mega-menu-active');
        if (chevron) chevron.classList.remove('rotate-180');
      });
    }
  });

  // Close menus when clicking on a link inside
  megaMenuGroups.forEach((group) => {
    const panel = group.querySelector('.mega-menu-panel');
    if (panel) {
      panel.addEventListener('click', (e) => {
        const target = e.target;
        if (target.tagName === 'A' || target.closest('a')) {
          const trigger = group.querySelector('.mega-menu-trigger');
          const chevron = group.querySelector('.mega-menu-chevron');
          panel.classList.add('hidden');
          if (trigger) trigger.classList.remove('mega-menu-active');
          if (chevron) chevron.classList.remove('rotate-180');
        }
      });
    }
  });

  // Mobile dropdowns
  const mobileDropdowns = [
    { button: 'mobile-dropdown-college-button', menu: 'mobile-dropdown-college' },
    { button: 'mobile-dropdown-lycee-button', menu: 'mobile-dropdown-lycee' },
    { button: 'mobile-dropdown-cours-button', menu: 'mobile-dropdown-cours' }
  ];

  mobileDropdowns.forEach(({ button, menu }) => {
    const buttonEl = document.getElementById(button);
    const menuEl = document.getElementById(menu);
    
    if (buttonEl && menuEl) {
      buttonEl.addEventListener('click', (e) => {
        e.stopPropagation();
        const isHidden = menuEl.classList.contains('hidden');
        
        // Close other mobile dropdowns
        mobileDropdowns.forEach(({ menu: otherMenu, button: otherButtonId }) => {
          if (otherMenu !== menu) {
            document.getElementById(otherMenu)?.classList.add('hidden');
            const otherButton = document.getElementById(otherButtonId);
            if (otherButton) {
              const otherArrow = otherButton.querySelector('svg');
              if (otherArrow) {
                otherArrow.style.transform = 'rotate(0deg)';
              }
            }
          }
        });
        
        menuEl.classList.toggle('hidden');
        
        // Rotate arrow
        const arrow = buttonEl.querySelector('svg');
        if (arrow) {
          arrow.style.transform = isHidden ? 'rotate(180deg)' : 'rotate(0deg)';
        }
      });
    }
  });

  // Scroll handler to modify navbar and show CTA
  const header = document.getElementById('main-header');
  const headerCta = document.getElementById('header-cta');
  let lastScrollY = window.scrollY;
  const scrollThreshold = 50; // Show CTA after scrolling 50px

  const handleScroll = () => {
    const currentScrollY = window.scrollY;
    
    if (currentScrollY > scrollThreshold) {
      // Add scrolled class to header
      header?.classList.add('scrolled');
      
      // Show CTA button
      if (headerCta) {
        headerCta.classList.remove('opacity-0', 'translate-x-4');
        headerCta.classList.add('opacity-100', 'translate-x-0');
      }
    } else {
      // Remove scrolled class from header
      header?.classList.remove('scrolled');
      
      // Hide CTA button
      if (headerCta) {
        headerCta.classList.add('opacity-0', 'translate-x-4');
        headerCta.classList.remove('opacity-100', 'translate-x-0');
      }
    }
    
    lastScrollY = currentScrollY;
  };

  // Throttle scroll events for better performance
  let ticking = false;
  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        handleScroll();
        ticking = false;
      });
      ticking = true;
    }
  });

  // Check initial scroll position
  handleScroll();

  // Update panel positions on scroll and resize
  window.addEventListener('scroll', () => {
    megaMenuGroups.forEach((group) => {
      const panel = group.querySelector('.mega-menu-panel');
      const triggerId = panel?.getAttribute('data-trigger-id');
      if (panel && !panel.classList.contains('hidden') && triggerId) {
        positionPanelAndCaret(panel, triggerId);
      }
    });
  });

  window.addEventListener('resize', () => {
    megaMenuGroups.forEach((group) => {
      const panel = group.querySelector('.mega-menu-panel');
      const triggerId = panel?.getAttribute('data-trigger-id');
      if (panel && !panel.classList.contains('hidden') && triggerId) {
        positionPanelAndCaret(panel, triggerId);
      }
    });
  });
</script>

