---
// Header simplifié
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between max-w-[1040px] mx-auto">
      <a href="/" class="text-lg font-semibold text-gray-900">
        revise-tes-maths.fr
      </a>
      
      <div class="hidden md:flex items-center space-x-6">
        <a href="/a-propos" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          Qui suis-je ?
        </a>
        <a href="/3eme" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          3ème
        </a>
        <a href="/seconde" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          Seconde
        </a>
        <a href="/premiere" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          Première
        </a>
        <a href="/terminale" class="text-gray-700 hover:text-gray-900 transition-colors text-sm">
          Terminale
        </a>
        <a 
          href="/#contact" 
          class="bg-gray-900 text-white px-5 py-2 rounded-lg font-medium hover:bg-gray-800 transition-colors text-sm"
        >
          Contact
        </a>
      </div>
      
      <button 
        id="mobile-menu-button"
        class="md:hidden text-gray-700 hover:text-gray-900"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200">
      <div class="space-y-3 pt-4">
        <a href="/a-propos" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          Qui suis-je ?
        </a>
        <a href="/3eme" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          3ème
        </a>
        <a href="/seconde" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          Seconde
        </a>
        <a href="/premiere" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          Première
        </a>
        <a href="/terminale" class="block text-gray-700 hover:text-gray-900 text-sm py-2">
          Terminale
        </a>
        <a 
          href="/#contact" 
          class="block bg-gray-900 text-white px-6 py-2 rounded-lg font-medium text-center text-sm"
        >
          Contact
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
