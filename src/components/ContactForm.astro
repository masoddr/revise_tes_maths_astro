---
// Contact form simplifié
---

<form 
  id="contact-form"
  class="bg-white border border-gray-200 rounded-lg p-6 md:p-8 space-y-5"
  method="POST"
  action="#"
>
  <div>
    <label for="classe" class="block text-gray-700 font-medium mb-2 text-sm">
      Classe
    </label>
    <select
      id="classe"
      name="classe"
      required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent text-sm"
    >
      <option value="">Sélectionnez une classe</option>
      <option value="3e">3e</option>
      <option value="2nde">2nde</option>
      <option value="1ere">1ère</option>
      <option value="terminale">Terminale</option>
    </select>
  </div>

  <div>
    <label for="etablissement" class="block text-gray-700 font-medium mb-2 text-sm">
      Établissement
    </label>
    <input
      type="text"
      id="etablissement"
      name="etablissement"
      required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent text-sm"
      placeholder="Nom de l'établissement"
    />
  </div>

  <div>
    <label for="objectif" class="block text-gray-700 font-medium mb-2 text-sm">
      Objectif
    </label>
    <select
      id="objectif"
      name="objectif"
      required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent text-sm"
    >
      <option value="">Sélectionnez un objectif</option>
      <option value="progression">Progression générale</option>
      <option value="specialites">Préparation spécialités</option>
      <option value="bac">Préparation bac</option>
      <option value="methode">Développement méthode de travail</option>
      <option value="python">Initiation/approfondissement Python</option>
    </select>
  </div>

  <div>
    <label for="disponibilites" class="block text-gray-700 font-medium mb-2 text-sm">
      Disponibilités
    </label>
    <textarea
      id="disponibilites"
      name="disponibilites"
      rows="3"
      required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent text-sm"
      placeholder="Jours et horaires disponibles"
    ></textarea>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label for="email" class="block text-gray-700 font-medium mb-2 text-sm">
        Email
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent text-sm"
        placeholder="votre.email@exemple.fr"
      />
    </div>

    <div>
      <label for="telephone" class="block text-gray-700 font-medium mb-2 text-sm">
        Téléphone
      </label>
      <input
        type="tel"
        id="telephone"
        name="telephone"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent text-sm"
        placeholder="06 12 34 56 78"
      />
    </div>
  </div>

  <div id="form-message" class="hidden p-4 rounded-lg bg-gray-50 border border-gray-200">
    <p class="text-gray-700 text-sm"></p>
  </div>

  <button
    type="submit"
    class="w-full bg-gray-900 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors text-sm"
  >
    Demander un entretien
  </button>
</form>

<script>
  const form = document.getElementById('contact-form');
  const messageDiv = document.getElementById('form-message');
  const messageText = messageDiv?.querySelector('p');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    if (messageDiv && messageText) {
      messageDiv.classList.remove('hidden');
      messageText.textContent = "Merci. Je reviens vers vous sous 48h ouvrées pour proposer un créneau d'échange.";
      messageDiv.className = 'p-4 rounded-lg bg-green-50 border border-green-200';
      form.reset();
      
      messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }
  });
</script>
