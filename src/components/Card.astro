---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = "" } = Astro.props;
---

<div class={`bg-white border border-gray-200 rounded-lg p-8 shadow-sm ${className}`}>
  {title && (
    <h3 class="text-xl font-semibold text-gray-900 mb-4">{title}</h3>
  )}
  <slot />
</div>

